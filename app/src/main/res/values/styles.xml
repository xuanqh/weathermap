<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">#00ffffff</item>
    </style>

    <style name="Theme.WeatherMap.Small">
        <item name="textLabelSizeDisplay">@style/LabelStyleSmall</item>
        <item name="textContentSizeDisplay">@style/ContentStyleSmall</item>
    </style>

    <style name="Theme.WeatherMap.Medium">
        <item name="textLabelSizeDisplay">@style/LabelStyleMedium</item>
        <item name="textContentSizeDisplay">@style/ContentStyleMedium</item>
    </style>

    <style name="Theme.WeatherMap.Large">
        <item name="textLabelSizeDisplay">@style/LabelStyleLarge</item>
        <item name="textContentSizeDisplay">@style/ContentStyleLarge</item>
    </style>

    <style name="LabelStyleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LabelStyleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LabelStyleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContentStyleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContentStyleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContentStyleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>